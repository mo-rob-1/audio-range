<section class="recommeded-products">
    <h1 class="recommeded-products__title" data-aos="fade-up">{{ section.settings.title }}</h1>

    <div class="recommeded-products__col-wrapper" data-aos="fade-up">
        {%- for block in section.blocks -%}
            <div class="recommeded-products__product-wrapper">
                <a href="{{ block.settings.link }}"><img class="recommeded-products__product-image recommeded-products__product-image--mobile" src="{{ block.settings.image_mobile | img_url: 'master' }}" alt="{{ block.settings.product }}"></a>
                <a href="{{ block.settings.link }}"><img class="recommeded-products__product-image recommeded-products__product-image--tablet" src="{{ block.settings.image_tablet | img_url: 'master' }}" alt="{{ block.settings.product }}"></a>
                <a href="{{ block.settings.link }}"><img class="recommeded-products__product-image recommeded-products__product-image--desktop" src="{{ block.settings.image_desktop | img_url: 'master' }}" alt="{{ block.settings.product }}"></a>

                <a class="recommeded-products__product-title-link" href="{{ block.settings.link }}"><h2 class="recommeded-products__product-title">{{ block.settings.title }}</h2></a>

                <div class="recommeded-products__product-link-wrapper">
                    <a class="recommeded-products__product-link" href="{{ block.settings.link }}">See Product</a>
                </div>
            </div>
        {%- endfor -%}
    </div>
</section>

{% schema %}
    {
        "name": "Recommended Products",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "You may also like"
            }
        ],
        "blocks": [
            {
                "type": "product",
                "name": "Product",
                "limit": 3,
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Product Title"
                    },
                    {
                        "type": "image_picker",
                        "id": "image_mobile",
                        "label": "Mobile Image"
                    },
                    {
                        "type": "image_picker",
                        "id": "image_tablet",
                        "label": "Tablet Image"
                    },
                    {
                        "type": "image_picker",
                        "id": "image_desktop",
                        "label": "Desktop Image"
                    },
                    {
                        "type": "url",
                        "id": "link",
                        "label": "Product URL"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Recommended Products"
            }
        ]
    }
{% endschema %}