<section>
    <h1>{{ section.settings.title }}</h1>
    {%- for block in section.blocks -%}
        <div>
            <h2>{{ block.settings.title }}</h2>
            <img src="{{ block.settings.image | img_url: 'large' }}" alt="{{ block.settings.product }}">
            <a href="{{ block.settings.link }}">See Product</a>
        </div>
      {%- endfor -%}
</section>

{% schema %}
    {
        "name": "Recommended Products",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title",
                "default": "You may also like"
            }
        ],
        "blocks": [
            {
                "type": "product",
                "name": "Product",
                "limit": 3,
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Product Title"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "url",
                        "id": "link",
                        "label": "Product URL"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Recommended Products"
            }
        ]
    }
{% endschema %}