{%- for block in section.blocks -%}
    <section class="featured-product-three">
      <div data-aos="fade-up">
        <img class="featured-product-three__img featured-product-three__img--mobile" src="{{ block.settings.image_mobile | img_url: 'master' }}">
        <img class="featured-product-three__img featured-product-three__img--tablet" src="{{ block.settings.image_tablet | img_url: 'master' }}">
        <img class="featured-product-three__img featured-product-three__img--desktop" src="{{ block.settings.image_desktop | img_url: 'master' }}">
      </div>

      <div class="featured-product-three__text-wrapper">
        <div data-aos="fade-up">
          <h1 class="featured-product-three__product-name">
            {{ block.settings.product_name }}
          </h1>
          <a class="featured-product-three__link" href="products/{{ block.settings.product }}">See Product</a>
        </div>
      </div>
    </section>
  {%- endfor -%}
  
  {% schema %}
    {
      "name": "Third Featured Product",
      "settings": [],
      "blocks": [
        {
          "type": "product",
          "name": "Product",
          "limit": 1,
          "settings": [
            {
              "type": "image_picker",
              "id": "image_mobile",
              "label": "Add Image for Mobile View"
            },
            {
              "type": "image_picker",
              "id": "image_tablet",
              "label": "Add Image for Tablet View"
            },
            {
              "type": "image_picker",
              "id": "image_desktop",
              "label": "Add Image for Desktop View"
            },
            {
              "type": "text",
              "id": "product_name",
              "label": "Product Name"
            },
            {
              "type": "product",
              "id": "product",
              "label": "Product"
            }
          ]
        }
      ]
    }
  {% endschema %}
  