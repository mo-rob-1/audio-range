<div>
    {% paginate collection.products by section.settings.number_of_products_per_page %}
        <h1>{{ collection.title }}</h1>

        <div>
            <div>
                {% for product in collection.products %}
                    {% render 'product-card', product_product: product %}
                    {%- comment -%} <div>
                        <a href="{{ product.url }}">
                          {% if product.featured_image %}
                            <div>
                              <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.featured_image.alt }}"/>
                            </div>
                    
                          {% else %}
                            {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
                          {% endif %}
                        </a>
                        <div>
                          <h2>{{ product.title }}</h2>
                    
                          <p>{{ product.description }}</p>
                    
                          <a href="{{ product.url }}">
                            See Product
                          </a>
                        </div>
                      </div> {%- endcomment -%}
                {% else %}
                    <p>No products in this collection</p>
                {% endfor %}
            </div>
        </div>

        {% render 'pagination', pagination: paginate %}
    {% endpaginate %}
</div>

{% schema %}

{
    "name": "Template Collection",
    "settings": [
        {
            "type": "number",
            "id": "number_of_products_per_page",
            "default": 6,
            "label": "Number of products per page"
        }
    ]
}

{% endschema %}
