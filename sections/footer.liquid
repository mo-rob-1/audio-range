<footer class="footer">
  <div class="footer__container">
    <div class="footer__border-wrapper">
      <div class="footer__border"></div>
    </div>

    <a class="footer__site-name" href="{{ shop.url }}">{{ shop.name }}</a>

    <nav class="footer__nav">
      <ul class="footer__menu">
        {% for link in section.settings.menu.links %}
          <li class="footer__menu-item">
            <a class="footer__menu-link" href="{{ link.url }}">
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </nav>

    {%- for block in section.blocks -%}
      <div class="footer__desktop-col-wrapper">
        <p class="footer__description">{{ block.settings.footer_description }}</p>

        <ul class="footer__social-media-menu footer__social-media-menu--desktop">
          <li class="footer__social-media-menu-item">
            <a class="footer__social-media-link footer__facebook-link" href="{{ section.settings.facebook_link }}"
              target="_blank"
              rel="noopener"
              aria-label="Facebook"
              aria-describedby="new-window-0">
              <span>{% render 'icon-facebook' %}</span>
            </a>
          </li>
          <li class="footer__social-media-menu-item">
            <a class="footer__social-media-link footer__twitter-link" href="{{ section.settings.twitter_link }}"
              target="_blank"
              rel="noopener"
              aria-label="Twitter"
              aria-describedby="new-window-0">
              <span>{% render 'icon-twitter' %}</span>
            </a>
          </li>
          <li class="footer__social-media-menu-item">
            <a class="footer__social-media-link footer__instagram-link" href="{{ section.settings.instagram_link }}"
              target="_blank"
              rel="noopener"
              aria-label="Instagram"
              aria-describedby="new-window-0">
              <span>{% render 'icon-instagram' %}</span>
            </a>
          </li>
        </ul>
      </div>
    {%- endfor -%}

    <div class="footer__wrapper-two-col">
      <ul class="footer__social-media-menu footer__social-media-menu--mobile">
        <li class="footer__social-media-menu-item">
          <a class="footer__social-media-link footer__facebook-link" href="{{ section.settings.facebook_link }}"
            target="_blank"
            rel="noopener"
            aria-label="Facebook"
            aria-describedby="new-window-0">
            <span>{% render 'icon-facebook' %}</span>
          </a>
        </li>
        <li class="footer__social-media-menu-item">
          <a class="footer__social-media-link footer__twitter-link" href="{{ section.settings.twitter_link }}"
            target="_blank"
            rel="noopener"
            aria-label="Twitter"
            aria-describedby="new-window-0">
            <span>{% render 'icon-twitter' %}</span>
          </a>
        </li>
        <li class="footer__social-media-menu-item">
          <a class="footer__social-media-link footer__instagram-link" href="{{ section.settings.instagram_link }}"
            target="_blank"
            rel="noopener"
            aria-label="Instagram"
            aria-describedby="new-window-0">
            <span>{% render 'icon-instagram' %}</span>
          </a>
        </li>
      </ul>


      <p class="footer__copyright-text">&copy; {{ 'now' | date: '%Y' }} {{ shop.name | link_to: '/' }} | {{ powered_by_link }}</p>
    </div>
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "link_list",
        "id": "menu",
        "label": "Footer Menu",
        "default": "footer"
      }
    ],
    "blocks": [
      {
        "type": "footer",
        "name": "Footer Information",
        "limit": 1,
        "settings": [
            {
                "type": "textarea",
                "id": "footer_description",
                "label": "Footer Description"
            }
        ]
      },
      {
        "type": "footer_links",
        "name": "Social Media Links",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "facebook_link",
            "label": "Facebook Link"
          }, {
            "type": "text",
            "id": "twitter_link",
            "label": "Twitter Link"
          }, {
            "type": "text",
            "id": "instagram_link",
            "label": "Instagram Link"
          }
        ]
      }
    ]
  }
{% endschema %}