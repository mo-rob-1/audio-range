<div>
  <div>
    <a href="{{ product_product.url }}">
      {% if product_product.featured_image %}
        <div>
          <img src="{{ product_product.featured_image | img_url: 'medium' }}" alt="{{ product_product.featured_image.alt }}"/>
        </div>

      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
      {% endif %}
    </a>

    <div>
      <span>{{ product_product.vendor }}
      </span>

      <a href="{{ product_product.url }}">{{ product_product.title }}
      </a>

      <p>{{ product_product.price | money }}
      </p>
    </div>
  </div>
</div>